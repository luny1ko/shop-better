<Window x:Class="PresentationTier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationTier"
        mc:Ignorable="d"
        Title="Книжный магазин" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="#0b4c5e">
    <Window.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#ebfcff"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                            <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Name="GridForTovar"
              DataContext="{Binding ElementName=MainList, Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="0" Text="Код:"/>
            <TextBox   Margin="5" Grid.Row="0" Grid.Column="1"
                                        Text="{Binding КодТовара}" />
            <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="1" Text="Наименование:"/>
            <TextBox Margin="5" Grid.Row="1" Grid.Column="1"
                                        Text="{Binding НаименованиеТовара}"/>
            <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="2" Text="Цена: "/>
            <TextBox Margin="5" Grid.Row="2" Grid.Column="1"
                                        Text="{Binding ЦенаТовара}"/>
            <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="3" Text="Количество:"/>
            <TextBox  Margin="5" Grid.Row="3" Grid.Column="1"
                                        Text="{Binding КоличествоТовара}"/>

            <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="6" Text="Всего по товару:"/>
            <TextBox Margin="5" Grid.Row="6" Grid.Column="1"
                                Text="{Binding СуммарнаяСтоимостьПозиции, Mode=Oneway}"/>
        </Grid>

        <Grid Grid.Row="1" Name="GridforCollections">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*">
                </ColumnDefinition>
                <ColumnDefinition Width="0.5*" >
                </ColumnDefinition>
                <ColumnDefinition/>


            </Grid.ColumnDefinitions>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.2*"/>

                </Grid.RowDefinitions>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>

                    </Grid.ColumnDefinitions>
                    <Button Background="#ebfcff" Name="BtnAdd" Click="BtnAdd_Click" Content="Добавить" Width="80" Height="30" Margin="0" Grid.Row="2" Grid.Column="0"  />

                    <Button Background="#ebfcff" Name="BtnCreateFile" Click="BtnCreateFile_Click" Content="Записать" Width="80" Height="30" Margin="0" Grid.Column="1"/>


                    <Button Background="#ebfcff" Name="BtnDelete" Click="BtnDelete_Click" Content="Удалить" Width="80" Height="30" Margin="0" Grid.Column="2"/>
                </Grid>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5" Orientation="Vertical" HorizontalAlignment="Center">

                    <TextBox  Name="TxtCode" Background="#f1f1e6" BorderBrush="White" BorderThickness="1" Width="380" Height="20" Margin="0,2" />
                    <TextBox Name="TxtName" Background="#f1f1e6" BorderBrush="White" BorderThickness="1" Width="380" Height="20" Margin="0,2" />
                    <TextBox Name="TxtGenre" Background="#f1f1e6" BorderBrush="White" BorderThickness="1" Width="380" Height="20" Margin="0,2" />
                    <TextBox Name="TxtPrice" Background="#f1f1e6" BorderBrush="White" BorderThickness="1" Width="380" Height="20" Margin="0,2" />
                    <TextBox Name="TxtQuantity" Background="#f1f1e6" BorderBrush="White" BorderThickness="1" Width="380" Height="20" Margin="0,2"/>
                </StackPanel>
            </Grid>

            <ListBox Name="MainList" ItemsSource="{Binding СписокТоваров, Mode=OneWay}"
                 DisplayMemberPath="ПредставлениеТовара" Background="Azure"
                 Margin="10"/>
            <Grid Grid.Column="1" Height="120" VerticalAlignment="Top" Margin="0,5,0,0" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition />

                </Grid.RowDefinitions>
                <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="0" Text="Код:" Grid.Column="1" HorizontalAlignment="Right"/>
                <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="1" Text="Наименование:" Grid.Column="1" HorizontalAlignment="Right"/>
                <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="2" Text="Жанр:" Grid.Column="1" HorizontalAlignment="Right"/>
                <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="3" Text="Цена:" Grid.Column="1" HorizontalAlignment="Right"/>
                <TextBlock Foreground="#f0e6e0" Margin="5" Grid.Row="4" Text="Количество:" Grid.Column="1" HorizontalAlignment="Right"/>
            </Grid>

        </Grid>
        <Grid Grid.Row="2" Name="GridForItog">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="121*"/>

            </Grid.ColumnDefinitions>
            <Button Width="50" HorizontalAlignment="Left" Content="Импорт товаров"  Click="ImportButton_Click" Margin="10,5,0,5" Background="#a9dff5"/>
            <Button HorizontalAlignment="Left" Width="230"  Content="Рассчитать cреднюю по жанрам" Click="CalculateButton_Click" Margin="40,5,0,5" Background="#00c5a8" Grid.Column="2" Grid.ColumnSpan="2" />
            <Button HorizontalAlignment="Left" Width="230" Content="Рассчитать самую дешёвую по жанрам" Click="Button_Click_3" Margin="40,5,0,5" Background="#00c5a8" Grid.Column="1"/>

        </Grid>

    </Grid>
</Window>